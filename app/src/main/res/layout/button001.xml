<?xml version="1.0" encoding="utf-8"?>
<selector
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<gradient
        android:angle="270"
        android:centerColor="#c80e0b"
        android:endColor="#a91010"
        android:startColor="#d51414"
 />
           
            <corners
                android:radius="25dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            
            <gradient
                android:startColor="#c80e0b"
                android:endColor="#a91010"
                android:angle="270" />
          
            <corners
                android:radius="25dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />

        </shape>
    </item>
</selector>